@using FinalBlog.Models
@model List<FinalBlog.Models.Post>
@{
    ViewData["Title"] = "Лента";
}

@section Scripts{
}



@section Body{
<div style="margin-left: 15%; margin-right: 15%;">
    <h1>Все посты</h1>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <tbody>
                @if(Model.Count() != 0){
                    foreach(var item in Model)
                    {   
                        <tr>
                            <td>@item.Author</td>
                            <td>@item.Title</td>
                            <td><a class="nav-link text-dark" asp-route-id='@item.Id' asp-controller="Home" asp-action="Post">Читать</a></td>
                        </tr>
                    }
                } else {
                    <h3>Список пуст. Добавьте первый!</h3>
                }
            </tbody>
        </table>
    </div>
</div>
}