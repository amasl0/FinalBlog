@model FinalBlog.Models.Post
@{
    ViewData["Title"] = "Deleter";
}
<h1>@ViewData["Title"]</h1>


@section Scripts{
}

@section Body{
    <div class="panel-heading">
    <h1 style="margin-left: 15%; margin-right: 15%;">Удаление поста</h1>
    <h3 style="margin-left: 15%; margin-right: 15%;">Для удаления поста необходимо подтвердить свои данные</h3>
</div>
<div class="panel-body">
    @using (Html.BeginForm("AuthorizationDelete", "Home"))
    {
      <div  style="margin-left: 15%; margin-right: 15%;">
        <div class="form-group">
            <label>Имя</label>
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control", @style = "width: 50%;"})
        </div>
        <div class="form-group">
            <label>Пароль для редактирования</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @style = "width: 50%;" })
        </div>
        <button type="submit" class="btn btn-primary">Удалить</button>
      </div>
    }
}