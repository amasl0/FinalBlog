@using FinalBlog.Models
@model FinalBlog.Models.Post

@{
    ViewData["Title"] = "EditorPost";
}
<h1>@ViewData["Title"]</h1>


@section Scripts{
}

@section Body{
    <div class="panel-heading">
    <h1 style="margin-left: 15%; margin-right: 15%;">Редактирование поста</h1>
</div>
<div class="panel-body">
    @using (Html.BeginForm("Edit", "Home"))
    {
      <div  style="margin-left: 15%; margin-right: 15%;">
        <div class="form-group">
            <label>Название поста</label>
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @style = "width: 40%;"})
        </div>
        <div class="form-group">
            <label>Текст</label>
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @style = "width: 100%; size: AutoSize;" })
        </div>
        <div class="form-group">
            <label>Ваш ник</label>
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control", @style = "width: 40%;" })
        </div>
        <div class="form-group">
            <label>Пароль для редактирования</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @style = "width: 40%;" })
        </div>
        <button type="submit" class="btn btn-primary">Сохранить</button>
      </div>
    }
}

